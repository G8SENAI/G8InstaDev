@using G8InstaDev.Models
@{
    ViewData["Title"] = "Cadastro";
}

<link rel="stylesheet" href=".../wwwroot/CSS-Cadastro/style.css">

<body>
    <header class="boxprincipal">
        <div class="logo">
            <img src="img/Instadev.png" alt="logo Instadev">
        </div>

        <div class="texto1">
            <h2>Cadastre-se para ver fotos <br> e vídeos dos seus amigos</h2>
        </div>

        <form action='@Url.Action("Cadastrar")' method="POST" class="boxprincipalforms">
            <div class="box">
                <input type="Email" placeholder="Email" style="width: 205px; height: 30px;" required>
            </div>

            <div class="box1">
                <input type="Nome completo" placeholder="Nome completo" style="width: 205px; height: 30px;" required>
            </div>

            <div class="box2">
                <input type="Nome de usuario" placeholder="Nome de usuario" style="width: 205px; height: 30px;" required>
            </div>

            <div class="box3">
                <input type="password" placeholder="Senha" style="width: 207px; height: 30px;" required>
            </div> 

            <div class="box4">
               <button type="submit" style="width: 207px; height: 30px;">cadastrar <a href="../Login/Index.cshtml"></a></button>
                <div class="erro">@TempData.Peek("Mensagem")</div>
            </div>
        </form>


        <div class="texto2">
            <h2>Ao se cadastrar, você concorda com nossos Termos, Política de Dados e Política de Cookies.</h2>
        </div>

        <section class="boxprincipal2">
            <div class="text">
                <p>Tem uma conta? <a href="../Login/Index.cshtml">Conecte-se</a></p>
            </div>
        </section>

        <section class="final">
            <div class="textfinal">
                <p>Obtenha o aplicativo</p>
            </div>

            <div class="img">
                <img src="img/app_store 1.png" alt="logo app store">
                <img src="img/google_play 1.png" alt="logo google play">
            </div>
        </section>
    </header>

</body>